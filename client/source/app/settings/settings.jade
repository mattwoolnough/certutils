.settings-main-view.full-width
    a.btn.btn--m.btn--green.btn--raised(ui-sref="root.settings.create", lx-ripple)
        i.mdi.mdi-plus-box.mr
        span Create New
    .card(class="mt+")
        table.data-table
            thead
                tr.heading
                    th Model
                    th.hide-sm OS
                    th.hide-sm Price
                    th.text-center Action
                tr
                    td.divider.divider--dark(colspan="4")
            tbody
                tr.empty-row(ng-if="vm.settingss.length === 0")
                    td(colspan="4") No settingss found!
                tr.data-table__clickable-row.settings-item(ng-repeat="settings in vm.settingss track by settings.id")
                    td
                        span {{::settings.model}}
                    td.hide-sm
                        span {{::settings.os}}
                    td.hide-sm
                        span {{::settings.price}}
                    td.text-center
                        a.btn.btn--m.btn--blue.btn--fab(
                            ui-sref="root.settings.detail({id: settings.id})",
                            lx-ripple, lx-tooltip="View"
                        )
                            i.mdi.mdi-information
                        button.btn.btn--m.btn--red.btn--fab(
                            ng-click="vm.deletesettings(settings.id, settings.model)",
                            lx-ripple, lx-tooltip="Delete"
                        )
                            i.mdi.mdi-delete

